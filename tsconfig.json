{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/javascript/*"]
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2016"]
  },
  "include": ["app/javascript/"]
}
