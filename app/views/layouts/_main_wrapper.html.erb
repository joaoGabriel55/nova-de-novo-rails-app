<header class="bg-white dark:bg-gray-900 shadow dark:shadow-gray-800">
  <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8 flex items-center gap-2">
    <% if local_assigns.fetch(:back_link) { nil } %>
    <a href="<%= back_link %>">
      <button title="<%= t('common.back') %>" type="button">
        <span class="material-symbols-outlined dark:text-white py-2">arrow_back</span>
      </button>
    </a>
    <% end %>
    <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white"><%= title %></h1>
  </div>
</header>
<main>
  <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8 relative">
    <%= yield %>
  </div>
</main>
